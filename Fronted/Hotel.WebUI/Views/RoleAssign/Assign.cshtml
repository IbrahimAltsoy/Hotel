@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "Assign";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Atama Sayfasına Hoşgeldiniz</h1>
<form method="post">
    @for (int i = 0; i < Model.Count; i++) {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].Id" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" class="form-check-input" asp-for="@Model[i].RoleExist" />
            <label class="form-check-label" for="@Model[i].Name">@Model[i].Name</label>
        </div>
    }
    <br />
    <button class="btn btn-success">Rolleri Güncelle</button>

</form>
