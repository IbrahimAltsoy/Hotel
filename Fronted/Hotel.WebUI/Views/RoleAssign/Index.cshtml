@model List<Hotel.EntitiyLayer.Concreate.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Kullanıcı Listesi</h1>

<div class="col-lg-12">
    <div class="active-member">
        <div class="table-responsive">
            <table class="table table-xs mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kullanıcı</th>
                        <th>Rol Ata</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){
                        count++;
                        <tr>
                        <td>@count</td>
                        <td><img src="@item.ImageUrl" class="rounded-circle mr-3"/>@item.Name @item.Surname</td>
                            <td><a href="/RoleAssign/Assign/@item.Id" class="btn btn-warning">Role Ata</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
