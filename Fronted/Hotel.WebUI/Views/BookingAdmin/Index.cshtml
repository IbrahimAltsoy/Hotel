@model List<ResultBookingAdminDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var count = 0;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Rezervasyonlar</h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        
                            <tr>
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Durum</th>
                        </tr>
                        
                    </thead>
                    <tbody>
                        @foreach(var item in Model){
                            count++;
                        <tr>
                            <th>@count</th>
                            <td>@item.Name</td>
                            <td>@(((DateTime)item.CheckIn).ToString("dd-MMM-yyyy"))</td>
                                <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                            
                            <td>
                                <span class="badge badge-primary px-2">@item.Status</span>
                            </td>

                                <td><a href="/BookingAdmin/UpdateBookingStatus/@item.Id" class="btn btn-outline-primary">Onayla</a></td>
                            <td ><a href="" class="btn btn-outline-danger">İptal Et</a></td>
                            <td ><a href="" class="btn btn-outline-warning">Beklet</a></td>
                            <td ><a href="" class="btn btn-outline-secondary">Güncelle</a></td>
                            <td ><a href="" class="btn btn-outline-info">Detay</a></td>
                        </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

