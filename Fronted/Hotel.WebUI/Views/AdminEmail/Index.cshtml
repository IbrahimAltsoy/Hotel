@model AdminEmailViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Email İşlemleri Sayfasına Hoşgeldiniz</h1>

<form method="post">
    <label>Alıcı Mail Adresi</label>
    <input type="text" class="form-control" asp-for="ReceiverMail" />
    <br />
    <label>Konu</label>
    <input type="text" class="form-control" asp-for="Subject" />
    <br />
    <label>Mesajınız</label>
    <textarea type="text" class="form-control h-150px" rows="6" id="comment" asp-for="Body" ></textarea>
    <br />
    <button class="btn btn-primary">Gönder</button>
</form>