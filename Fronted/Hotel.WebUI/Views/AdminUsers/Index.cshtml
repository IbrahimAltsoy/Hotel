@model List<ResultAppUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
   
}
<div class="row">
    
        @foreach(var item in Model)
        {
       
            @* <partial name="~/Views/AdminUsers/UserList.cshtml" /> *@
            <div class="col-lg-3 col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center">
                            <img src="@item.ImageUrl" class="rounded-circle" alt="">
                            <h5 class="mt-3 mb-1">@item.Name @item.Surname</h5>
                            <p class="m-0">@item.City</p>
                            <!-- <a href="javascript:void()" class="btn btn-sm btn-warning">Send Message</a> -->
                        </div>
                    </div>
                </div>
            </div>
        
        
        }
        
    
   

</div>


    <table class="table table-xs mb-0">
        <thead>
            <tr>
            <th>#</th>
                <th></th>
                <th>Ad Soyad</th>
            <th>Şehir</th>
                <th>Sil</th>
                
            </tr>
        </thead>
        <tbody>
        @foreach(var item in Model)
        {

            count++;
            <tr>
                <td>@count</td>
                <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt=""></td>
                <td>@item.Name @item.Surname</td>
                <td>
                    <span>@item.City</span>
                </td>
               
                <td><button class="btn btn-warning">Sil</button></td>
               
            </tr>
        }
        </tbody>
    </table>
    <a href="#" class="btn btn-success">Yeni Kullanıcı</a>

