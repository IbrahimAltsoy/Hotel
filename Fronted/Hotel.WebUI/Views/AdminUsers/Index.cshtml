@model List<Hotel.EntitiyLayer.Concreate.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}



    <table class="table table-xs mb-0">
        <thead>
            <tr>
            <th>#</th>
                <th></th>
                <th>Ad Soyad</th>
            <th>Şehir</th>
                <th>Sil</th>
                
            </tr>
        </thead>
        <tbody>
        @foreach(var item in Model)
        {

            count++;
            <tr>
                <td>@count</td>
                <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt=""></td>
                <td>@item.Name @item.Surname</td>
                <td>
                    <span>@item.City</span>
                </td>
               
                <td><button class="btn btn-warning">Sil</button></td>
               
            </tr>
        }
        </tbody>
    </table>
    <a href="#" class="btn btn-success">Yeni Kullanıcı</a>

