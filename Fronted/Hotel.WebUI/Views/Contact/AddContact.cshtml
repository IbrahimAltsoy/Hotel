@model CreateContactDto

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Bize Ulaşın</h6>
            <h1 class="mb-5"><span class="text-primary text-uppercase">Tüm İstekleriniz</span> İçin Varız</h1>
        </div>
        <div class="row g-4">
            <div class="col-12">
                <div class="row gy-4">
                    <div class="col-md-4">
                        <h6 class="section-title text-start text-primary text-uppercase">Rezervasyon</h6>
                        <p><i class="fa fa-envelope-open text-primary me-2"></i>book@kayagroup.com.com</p>
                    </div>
                    <div class="col-md-4">
                        <h6 class="section-title text-start text-primary text-uppercase">Genel</h6>
                        <p><i class="fa fa-envelope-open text-primary me-2"></i>info@kayagroup.com</p>
                    </div>
                    <div class="col-md-4">
                        <h6 class="section-title text-start text-primary text-uppercase">Teknik Birim</h6>
                        <p><i class="fa fa-envelope-open text-primary me-2"></i>tech@kayagroup.com</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 wow fadeIn" data-wow-delay="0.1s">
                <iframe class="position-relative rounded w-100 h-100"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3059.5717372987315!2d32.8740537!3d39.9285992!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d34f42cd4ddd3d%3A0x109675837e94f907!2sA.%C3%9C.%20Siyasal%20Bilgiler%20Fak%C3%BCltesi%20(M%C3%BClkiye)%20K%C3%BCt%C3%BCphanesi!5e0!3m2!1str!2str!4v1696626327099!5m2!1str!2str"
                        frameborder="0" style="min-height: 350px; border:0;" allowfullscreen="" aria-hidden="false"
                        tabindex="0"></iframe>
            </div>
          
            <div class="col-md-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form method="post" asp-action="AddContact" asp-controller="Contact">
                       @*  <input type="hidden" value="true" asp-for="IsActive"/> *@
                        @* <input type="hidden" value="15/05/2023" asp-for="CreatedDate"/> *@
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="name" placeholder="Ad Soyad" asp-for="Name">
                                    <label for="name">Ad Soyad</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="email" placeholder="Email" asp-for="Email">
                                    <label for="email">Email</label>
                                </div>
                            </div>
                         
                            <div class="col-md-6">
                            <div class="form-floating">
                                    @Html.DropDownListFor(x=>x.CategoryMessageId,(List<SelectListItem>)ViewBag.ListCategoryMessage, new {@class="form-control"})
                                <label for="name">Konu Başlığı</label>
                            </div>

                            </div>
                            @* <div class="form-group">
                                <label asp-for="CategoryMessageId" class="control-label"></label>
                                <div class="d-flex">
                                    <select asp-for="CategoryMessageId" class="form-select" asp-items="ViewBag.CategoryMessageId">
                                        <option value="0"> Ana Kategori</option>
                                    </select>
                                </div>
                            </div> *@
                        @*     // *@
                            <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="name" placeholder="Konu" asp-for="Subject">
                                <label for="name">Konu</label>
                                </div>
                            </div>
                         
                           @*  <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="subject" placeholder="Konu" asp-for="Subject">
                                    <label for="subject">Konu</label>
                                </div>
                            </div> *@
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Mesaj Yazınız" id="message" style="height: 150px" asp-for="Message"></textarea>
                                    <label for="message">Mesaj</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>