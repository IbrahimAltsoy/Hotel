@model UpdateSenderMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1> Gönderilen Mesaj Detayları</h1>


<div class="email-left-box">
    <a href="/AdminContact/AddSenderMessage/" class="btn btn-primary btn-block">Yeni Mesj Oluştur</a>
    @await Html.PartialAsync("/Views/AdminContact/SideBarAdminContactPartial.cshtml")

    @await Html.PartialAsync("/Views/AdminContact/SideBarCategoryAdminContactPartial.cshtml")

</div>
<div class="email-right-box">
    <div role="toolbar" class="toolbar">
        <div class="btn-group">
            <button aria-expanded="false" class="btn btn-dark" type="button">
                Gelen Mesajlar <span class="caret m-l-5"></span>
            </button>

        </div>
    </div>
   @*  // *@
    <div class="read-content">
        <div class="media pt-5">
            <img class="mr-3 rounded-circle" src="~/adminweb/images/avatar/1.jpg">
            <div class="media-body">
                <h5 class="m-b-3">@Model.SenderName</h5>
                <p class="m-b-2">@((((DateTime)Model.CreatedDate).ToString("dd-MMM-yyyy")))</p>
            </div>

        </div>
        <hr>
        <div class="media mb-4 mt-1">
            <div class="media-body">
                
                <h4 class="m-0 text-primary">@Model.Title</h4><small class="text-muted">@Model.ReceiverEmail</small>
            </div>
        </div>
       
        <p>
       @Model.Content
       
        </p>
       
        
        <hr>
        <h6 class="p-t-15"><i class="fa fa-download mb-2"></i> Attachments <span>(3)</span></h6>
        
       
        <hr>
        <div class="form-group p-t-15">
            <textarea class="w-100 p-20 l-border-1" name="" id="" cols="30" rows="5" placeholder="It's really an amazing.I want to know more about it..!"></textarea>
        </div>
    </div>
    <!-- panel -->

</div>



